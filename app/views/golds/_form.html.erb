<%= form_for @gold, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Gold</legend>

    <div class="control-group">
      <%= f.label :article_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :article_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :type, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :type, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :answer, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :answer, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', golds_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
