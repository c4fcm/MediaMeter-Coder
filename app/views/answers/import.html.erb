<h1>Import Gold</h1>

<br />

<%= form_for :file_upload, :html => {:multipart => true}, :class=>'form-vertical' do %>

<fieldset>
	<legend>Pick a User</legend>
	<div class="control-group">
  	<%= select_tag "username", options_from_collection_for_select(@users,"id","username") %>
	</div>
</fieldset>

<fieldset>
	<legend>Pick a Question Type</legend>
	<% @all_answer_types.each do |type| %>
		<div class="control-group">
			<%= label('answer','type', radio_button('answer','type',type)+type , :class=>"radio")%>
		</div>
	<% end %>
</fieldset>

<fieldset>
  <legend>Pick a File</legend>
	<div class="control-group">
  	<%= file_field_tag :my_file %>
	</div>
</fieldset>


<div class="form-actions">
  <%= submit_tag("Upload",:class=>"btn btn-primary") %>
</div>
  
<% end %>
