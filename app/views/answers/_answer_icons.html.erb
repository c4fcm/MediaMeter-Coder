
<%
extra_css = ""
if gold.answer==nil
	extra_css = "uwc-agreement-missing"	
else 
	extra_css = "uwc-agreement-made"
end  
%>

<div class="uwc-agreement <%=extra_css%>">
<%
if gold.answer==true
%>	<em>Yes</em> <small><%=agreement_info[:yes]*100%>%</small>
<%
elsif gold.answer==false
%>
	<em>No</em> <small><%=agreement_info[:no]*100%>%</small>
<%
else 
%>
	<em>???</em> <small><%=agreement_info[:yes]*100%> / <%=agreement_info[:no]*100%>%</small>
<%
end
%>

<div>
<%
answers.each do |answer| 
  if answer.answer then
%>
    <%=image_tag "green-dot.png", :alt=>answer.user_id.to_s %>
<% 
  else
%>
    <%=image_tag "red-dot.png", :alt=>answer.user_id.to_s %>
<%
  end
end
%>
</div>

<%= form_for gold, :remote=>true, :format=>:js do |f| %>
  <%= f.check_box :answer %>
<% end %>

</div>
