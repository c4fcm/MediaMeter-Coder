
<h1>Generate Golds</h1>
<br />

<!-- this has to be a get so that the pagination of results works -->
<%= form_tag("/answers/for_users", :method => "post", :class=>'form-vertical') do %>

<fieldset>
		<legend>Pick a Sample Set of Articles</legend>
	<% @sampletags.each do |tag| %>
		<div class="control-group">
			<%= label('tag','name', radio_button('tag','name',tag)+tag , :class=>"radio")%>
		</div>
	<% end %>
</fieldset>

<fieldset>
		<legend>Pick Users</legend>
	<% @users.each do |user| %>
		<div class="control-group">
			<%= label_tag(user.id, check_box_tag(user.id) + user.username + " (" + @user_answer_counts[user.id].to_s + ")", 
						  :class=>"checkbox") %>
		</div>
	<% end %>
</fieldset>

<div class="form-actions">
  <%= submit_tag("Generate/View Golds",:class=>"btn btn-primary") %>
</div>
  
<% end %>